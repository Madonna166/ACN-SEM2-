Q2.
emacs area.sh

echo "Menu"
echo -e "1.Circle \n2.Rectangle \n3.Triangle"
echo "Enter choice"
read ch
case $ch in
    1)
	echo "Enter radius"
	read r
	area=` expr $r \* $r \* 22 `
	area1=` expr $area / 7 `
	echo  "Area of circle: $area1"
	;;
    2)
	echo "Enter length"
	read l
	echo "Enter breadth"
	read b
	area=` expr $l \* $b `
	echo "Area of rectangle: $area"
	;;
    3)
	echo "Enter base"
	read b
	echo "Enter height"
	read h
	area=` expr $b \* $h / 2 `
	echo "Area of triangle: $area"
	;;
    esac
	

